{
    "name": "telnet-adapter",
    "display_name": "Telnet",
    "version": "0.0.2",
    "main": "main.js",
    "description": "Adapter for Telnet devices",
    "keywords": [
        "mozilla",
        "iot",
        "adapter",
        "telnet"
    ],
    "homepage": "https://github.com/roderm/telnet-adapter",
    "author": "roderm",
    "repository": {
        "type": "git",
        "url": "https://github.com/roderm/telnet-adapter.git"
    },
    "bugs": {
        "url": "https://github.com/roderm/telnet-adapter/issues"
    },
    "files": [
        "LICENSE",
        "SHA256SUMS",
        "main.js",
        "node_modules",
        "lib/telnet-adapter.js",
        "lib/telnet-db.js",
        "lib/telnet-device.js",
        "lib/telnet-file-loader.js",
        "lib/telnet-property.js",
        "lib/telnet-service.js",
        "lib/mappers/mapper_factory.js",
        "lib/mappers/boolean_mapper.js",
        "lib/mappers/level_mapper.js"
    ],
    "dependencies": {
        "rxjs": "^6.3.3"
    },
    "moziot": {
        "api": {
            "min": 1,
            "max": 2
        },
        "plugin": true,
        "enabled": true,
        "exec": "{nodeLoader} {path}",
        "config": {
            "HostSetup": []
        },
        "schema": {
            "type": "object",
            "properties": {
                "HostSetup": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [
                            "host",
                            "port",
                            "commandset"
                        ],
                        "properties": {
                            "host": {
                                "type": "string"
                            },
                            "port": {
                                "type": "number"
                            },
                            "commandset": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}
